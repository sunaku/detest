<%
  ##
  # Wraps the given content within <pre>
  # tags in a way that is Markdown-safe.
  #
  def preformatted content
    if content =~ /\S/
      content.gsub(/^/, ' ' * 4)
    else
      "<pre>#{content}</pre>"
    end
  end
%>

% github_url = 'http://github.com/sunaku/difects'

%+ "README"

%+ "USAGE"

%+ "TESTS"

%+ "ASSERTIONS"

%+ "EMULATION"

%+ "EXAMPLES"

%+ "HACKING"

%+ "HISTORY"

%+ "CREDITS"

%+ "FURTHER"
